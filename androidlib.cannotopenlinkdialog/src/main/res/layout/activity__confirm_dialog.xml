<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="?dialogPreferredPadding"
        android:paddingEnd="?dialogPreferredPadding"/>

    <LinearLayout
        style="?android:attr/buttonBarButtonStyle"
        android:clickable="false"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button__retry"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/activity__cannot_open_link__retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button__copy"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/activity__cannot_open_link__copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button__share"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/activity__cannot_open_link__share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
